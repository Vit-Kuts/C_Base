{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: clang.exe build and run active file",
      "command": "cmd",
      "args": [
        "/C",
        "\"C:\\Program Files\\LLVM\\bin\\clang.exe\" -fcolor-diagnostics -fansi-escape-codes -g \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" && \"${fileDirname}\\${fileBasenameNoExtension}.exe\" && pause"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "Build and Run C with gcc (PowerShell)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "gcc ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.exe; if ($?) { & \"${fileDirname}\\${fileBasenameNoExtension}.exe\"; Read-Host -Prompt 'Нажмите Enter для продолжения...' }"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$gcc"],
      "options": {
        "cwd": "${fileDirname}"
      }
    },
    {
      "label": "Build and Run C with gcc (CMD)",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/C",
        "gcc ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.exe && ${fileDirname}\\${fileBasenameNoExtension}.exe & pause"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$gcc"],
      "options": {
        "cwd": "${fileDirname}"
      }
    }
  ]
}